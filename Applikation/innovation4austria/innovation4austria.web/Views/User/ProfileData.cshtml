@model innovation4austria.web.Models.ProfileModel
@{
    ViewBag.Title = "innovation4austria - Profil verwalten";
}

<div class="row">
    <div class="col-md-12">
        <h1>Profil verwalten</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-1 col-md-5">
        @using (Html.BeginForm("SaveProfileData", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <!--
                die ID wird NICHT zum Client übertragen
                weil diese sonst manipuliert werden könnte
                und das System unbeabsichtigt einen anderen
                (als den angemeldeten) User ändern würde
            -->
            @*@Html.HiddenFor(x => x.ProfileData.ID)*@
            <div class="row">
                <h3 class="col-md-12">Meine Daten</h3>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfileData.Username)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileData.Username, new { disabled = "disabled", @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfileData.Firstname)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileData.Firstname, new { placeholder = "Vorname", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProfileData.Firstname)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfileData.Lastname)
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.ProfileData.Lastname, new { placeholder = "Nachname", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProfileData.Lastname)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Speichern</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-offset-1 col-md-5">
        @using (Html.BeginForm("SaveProfilePassword", "User", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <!--
                die ID wird NICHT zum Client übertragen
                weil diese sonst manipuliert werden könnte
                und das System unbeabsichtigt einen anderen
                (als den angemeldeten) User ändern würde
            -->
            @*@Html.HiddenFor(x => x.ProfileData.ID)*@
            <div class="row">
                <h3 class="col-md-12">Passwort ändern</h3>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfilePassword.OldPassword)
                </div>
                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.ProfilePassword.OldPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProfilePassword.OldPassword)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfilePassword.NewPassword)
                </div>
                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.ProfilePassword.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProfilePassword.NewPassword)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ProfilePassword.ConfirmNewPassword)
                </div>
                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.ProfilePassword.ConfirmNewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProfilePassword.ConfirmNewPassword)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Speichern</button>
                </div>
            </div>

        }
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
