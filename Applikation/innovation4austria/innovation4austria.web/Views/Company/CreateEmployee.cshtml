@model innovation4austria.web.Models.CreateEmployeeModel
@{
    ViewBag.Title = "innovation4austria - Mitarbeiter anlegen";
}


@using (Html.BeginForm("CreateEmployee", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.CompanyID)
    <div class="row">
        <h3 class="col-md-12">Mitarbeiter anlegen</h3>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(x => x.Username)
        </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(x => x.Firstname)
        </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Firstname, new { placeholder = "Vorname", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Firstname)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(x => x.Lastname)
        </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Lastname, new { placeholder = "Nachname", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Lastname)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(x => x.NewPassword)
        </div>
        <div class="col-sm-3">
            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NewPassword)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(x => x.ConfirmNewPassword)
        </div>
        <div class="col-sm-3">
            @Html.PasswordFor(x => x.ConfirmNewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ConfirmNewPassword)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5 text-center">
            <button type="submit" class="btn btn-primary btn-lg">Anlegen</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 text-center">
            @Html.ActionLink("Zurück zur Firma", "Detail", "Company", new { id = Model.CompanyID }, null)
        </div>
    </div>